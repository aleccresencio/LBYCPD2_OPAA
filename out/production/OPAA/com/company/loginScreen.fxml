<GridPane alignment="center" hgap="10" prefHeight="600.0" prefWidth="1000.0" vgap="10" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="510.0" prefWidth="878.0">
         <children>
            <PasswordField fx:id="pwField" alignment="CENTER" layoutX="164.0" layoutY="336.0" prefHeight="39.0" prefWidth="582.0" promptText="Password" styleClass="txtFld" />
            <TextField fx:id="usernameField" alignment="CENTER" layoutX="164.0" layoutY="282.0" prefHeight="39.0" prefWidth="581.0" promptText="Username / E-mail" styleClass="txtFld" />
            <Button fx:id="loginButton" layoutX="406.0" layoutY="442.0" mnemonicParsing="false" onAction="#loginButton" prefHeight="30.0" prefWidth="99.0" text="LOGIN">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Label fx:id="incorrectLabel" layoutX="340.0" layoutY="400.0" styleClass="headerLabel" text="Incorrect username or password" visible="false" />
            <ImageView fitHeight="197.0" fitWidth="587.0" layoutX="171.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@assets/opaa_logo.png" />
               </image>
            </ImageView>
            <Label layoutX="161.0" layoutY="203.0" styleClass="titleLabel" text="ONLINE PLATFORM FOR ACADEMIC ADVISING" />
         </children>
         <GridPane.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </GridPane.margin>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@opaa_stylesheet.css" />
   </stylesheets>
</GridPane>
