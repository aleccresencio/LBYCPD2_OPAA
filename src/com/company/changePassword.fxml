<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.ChangePasswordController">
   <children>
      <VBox layoutX="210.0" layoutY="76.0" prefHeight="497.0" prefWidth="580.0">
         <children>
            <HBox alignment="CENTER" prefHeight="138.0" prefWidth="580.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="38.0" prefWidth="580.0">
               <children>
                  <Label fx:id="usernameLabel" styleClass="usernameLabel" text="Label">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Label>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="78.0" prefWidth="580.0">
               <children>
                  <PasswordField fx:id="oldPasswordFld" prefHeight="38.0" prefWidth="580.0" promptText="Old Password" styleClass="txtFld" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="78.0" prefWidth="580.0">
               <children>
                  <PasswordField fx:id="newPasswordFld" prefHeight="38.0" prefWidth="580.0" promptText="New Password" styleClass="txtFld" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <PasswordField fx:id="confirmPasswordFld" prefHeight="38.0" prefWidth="580.0" promptText="Confirm New Password" styleClass="txtFld" />
               </children>
            </HBox>
            <HBox alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="580.0">
               <children>
                  <Label fx:id="errorLabel" prefHeight="22.0" prefWidth="725.0" styleClass="changePasswordLabel" text="Incorrect password" textAlignment="CENTER" visible="false" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="updatePasswordButton" mnemonicParsing="false" onAction="#handleUpdatePassword" prefHeight="39.0" prefWidth="200.0" text="Update Password" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Button fx:id="backButton" layoutX="185.0" layoutY="237.0" mnemonicParsing="false" onAction="#goBackButton" prefHeight="47.0" prefWidth="46.0" styleClass="backButton">
         <padding>
            <Insets right="50.0" />
         </padding>
      </Button>
   </children>
    <stylesheets>
        <URL value="@opaa_stylesheet.css" />
    </stylesheets>
</AnchorPane>
